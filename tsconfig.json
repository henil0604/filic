{
  "compilerOptions": {
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./lib",
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": ["node_modules", "lib"]
}